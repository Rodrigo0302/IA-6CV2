import time

def cross_bridge(persons):
    total_time = 0

    while len(persons) > 0:
        if len(persons) == 1:
            total_time += persons[0]
            break
        elif len(persons) == 2:
            total_time += max(persons)
            break
        else:
            fastest = min(persons)
            second_fastest = sorted(persons)[1]
            total_time += second_fastest

            persons.remove(fastest)
            persons.remove(second_fastest)

            total_time += fastest

    return total_time

persons = [1, 2, 5, 10]
total_time = cross_bridge(persons)
print(f"It will take {total_time} minutes for all persons to cross the bridge.")